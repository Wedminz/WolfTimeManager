<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/title_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                style="@style/TextView.Bold"
                android:id="@+id/all_project_title"
                android:text="@string/all_group_time"/>

            <ImageView
                android:visibility="gone"
                android:id="@+id/project_setting_btn"
                android:layout_toEndOf="@id/all_project_title"
                android:layout_marginStart="8dp"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_settings_black"/>

        </RelativeLayout>


        <TextView
            style="@style/TextView.SubTitle"
            android:id="@+id/total_time_count"
            android:text="@string/text_total_time"/>

    </LinearLayout>

</RelativeLayout>